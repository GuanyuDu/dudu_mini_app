.block {
  height: 180px;
  display: grid;
  position: relative;
  grid-template-columns: 1fr;
  grid-template-rows: 1fr 4fr 1fr;
  border-radius: 10px;
  overflow: hidden;
  margin-top: 20px;
  padding: 20px 25px;
  background-color: rgba(0, 0, 0, .3);
  background-size: cover;
  background-position: center;
  box-shadow: 10px 10px 10px 1px rgba(0, 0, 0, .1);
}

.block-header {
  color: white;
  display: grid;
  grid-template-columns: 1fr;
  grid-template-rows: 1fr 2fr;
}

.text-head {
  font-size: 1.5em;
  font-weight: bold;
  text-shadow: 0 0 2px 1px rgba(0, 0, 0, 0.5);
}

.text-subhead {
  color: #f0f0f0;
  font-weight: bold;
  text-shadow: 0 0 2px 1px rgba(0, 0, 0, 0.5);
}

.block-footer {
  color: white;
  font-weight: bold;
  text-shadow: 0 0 5px 2px rgba(0, 0, 0, 0.9);
}