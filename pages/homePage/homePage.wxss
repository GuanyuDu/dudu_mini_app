/* pages/musicPage/musicPage.wxss */
swiper {
  height: 240px;
}

.img-sty {
  width: 100%;
}

.swiper-sty {
  margin-top: 10px;
  border-radius: 10px;
  overflow: hidden;
  /* 兼容Sarfari圆角 */
  -webkit-backface-visibility: hidden;
  -webkit-transform: translate3d(0, 0, 0);
}

.img-card-shadow {
  box-shadow: 0 0 10px 3px rgba(0, 0, 0, 0.1);
  box-shadow: 2px 2px 10px 3px rgba(0, 0, 0, 0.1);
}