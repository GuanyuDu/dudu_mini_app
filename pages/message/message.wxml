<!--pages/message/message.wxml-->
<view class="page">
    <view class="page-body">
        <view>
            <text class="title-first">留言板</text>
        </view>
        <view wx:for="{{ msgs }}" wx:key="idx">
            <msg-section 
                cover="{{ item.cover }}" 
                nickName="{{ item.nickName }}" 
                message="{{ item.message }}" 
                createdTime="{{ item.createdTime }}" 
                backColor="{{ item.cardColor }}" 
                top="{{ item.top }}" />
        </view>
        <!-- float button -->
        <view class="float-btn">
            <text bindtap="dialogCtl">说两句</text>
        </view>
        <!-- dialog -->
        <dialog-card showDialog="{{ showDialog }}" bind:confirm="confirmEvent" bind:cancel="cancelEvent">
            <text>我是插槽放进来的内容</text>
        </dialog-card>
    </view>
</view>
