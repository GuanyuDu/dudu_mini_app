/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.page-body {
  padding: 10px 20px;
}

.grid-box {
  display: grid;
  grid-template-columns: 1fr, 1fr;
  grid-template-rows: 1fr, 1fr;
}

.self-text {
  font-size: 1.2em;
  display: grid;
  align-items: center;
  justify-items: center;
}

.test-box {
  width: 100%;
  height: 50px;
  margin-top: 20px;
  border-radius: 10px;
  background-color: #ffffff;
  box-shadow: 0 0 5px 1px rgba(0, 0, 0, 0.1);
  box-shadow: 2px 2px 5px 1px #f0f0f0;
}

.self-title-head {
  font-size: 2.0em;
  font-weight: bold;
}

